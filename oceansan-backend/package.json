{
  "name": "oceansan-backend",
  "version": "1.0.0",
  "main": "dist/server.js",
  "type": "commonjs",
  "scripts": {
    "dev": "ts-node src/server.ts",
    "dev:watch": "nodemon --watch 'src/**/*.ts' --exec npx ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "package": "nexe dist/server.js -t windows-x64-20.4.0 -o build/server.exe --build",
    "oceansan:start": "pm2 start dist/server.js --name OceansanBackend",
    "oceansan:stop": "pm2 stop OceansanBackend",
    "oceansan:restart": "pm2 restart OceansanBackend",
    "oceansan:logs": "pm2 logs OceansanBackend",
    "oceansan:delete": "pm2 delete OceansanBackend",
    "oceansan:save": "pm2 save"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "events": "^3.3.0",
    "express": "^5.2.1",
    "fs-extra": "^11.3.3",
    "mongoose": "^9.1.4",
    "node-cron": "^4.2.1",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^25.0.9",
    "@types/ws": "^8.18.1",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "bin": {
    "oceansan": "dist/server.js"
  },
  "pkg": {
    "targets": [
      "node20-win-x64",
      "node20-macos-x64",
      "node20-linux-x64"
    ],
    "outputPath": "build",
    "assets": [
      ".env",
      "logs/**/*"
    ]
  }
}